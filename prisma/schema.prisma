  id Int @id @default(autoincrement())
  fullName String @unique
  departments String[]
  email String?
  phone String?
  office String?
  websiteURL String?
  photoURL String?
  interests String[]
  occupations String[]
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
