{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "node dist/src/main",
    "dev": "NODE_ENV=dev nest start --watch",
    "dev:debug": "NODE_ENV=dev nest start --debug --watch",
    "dev:no-processors": "DISABLE_PROCESSORS=true yarn dev",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --forceExit",
    "migrations:generate": "prisma migrate dev",
    "migrations:run": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "prod:prepare": "yarn migrations:run && yarn db:seed"
  },
  "dependencies": {
    "@bull-board/api": "^3.6.0",
    "@bull-board/express": "^3.6.0",
    "@codetheweb/nestjs-bull": "^0.3.1",
    "@mtucourses/rate-my-professors": "^2.0.1",
    "@mtucourses/scraper": "^2.4.2",
    "@mtucourses/thumbor": "^1.0.3",
    "@nestjs/common": "^8.0.6",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.6",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/platform-fastify": "^8.0.6",
    "@nestjs/schedule": "^0.4.3",
    "@nestjs/swagger": "^5.0.9",
    "@prisma/client": "^3.2.1",
    "@rschedule/core": "^1.2.3",
    "@rschedule/json-tools": "^1.2.3",
    "@rschedule/standard-date-adapter": "^1.2.3",
    "arr-diff": "^4.0.0",
    "bullmq": "1.48.3",
    "cache-manager": "^3.4.0",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "dd-trace": "^1.5.0",
    "deep-equal": "^2.0.5",
    "fastify-swagger": "^3.5.0",
    "got": "^11.8.2",
    "p-throttle": "^4.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "ts-node": "^10.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.1",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.6",
    "@types/arr-diff": "^4.0.0",
    "@types/cache-manager": "^3.4.2",
    "@types/cron": "^1.7.3",
    "@types/deep-equal": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.6.0",
    "@types/redis": "^2.8.31",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "delay": "^4.4.0",
    "eslint": "^7.32.0",
    "eslint-config-xo-typescript": "^0.38.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "husky": "^4.3.6",
    "jest": "^27.0.6",
    "lint-staged": "^10.5.3",
    "prisma": "^3.2.1",
    "redis": "^3.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.5",
    "tsconfig-paths": "^3.10.1",
    "type-fest": "^1.0.1",
    "typescript": "^4.3.5",
    "webpack": "^5.50.0",
    "xo": "^0.38.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".*\\.spec\\.ts$"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "xo --fix"
    ]
  },
  "xo": {
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "new-cap": [
        "error",
        {
          "capIsNewExceptionPattern": "@*"
        }
      ],
      "import/extensions": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "unused-imports/no-unused-imports-ts": "error",
      "unicorn/no-abusive-eslint-disable": "off",
      "unused-imports/no-unused-vars-ts": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ]
    }
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
